<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.camera_detect_activity.ml.drag_object.DragObjectActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnRemoveObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_bin_24"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"/>

        <fragment
            android:id="@+id/fragment_drag_object"
            android:name="com.google.ar.sceneform.ux.ArFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            <HorizontalScrollView
                android:id="@+id/startHorizontal"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/table"
                        android:id="@+id/table"/>
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/piano"
                        android:id="@+id/piano"
                        android:padding="10dp"/>
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bed"
                        android:id="@+id/bed"
                        android:padding="10dp"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/chair"
                        android:id="@+id/chair"/>
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/maygiat"
                        android:id="@+id/mayGiat"
                        android:padding="10dp"/>
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ironman"
                        android:id="@+id/ironman"
                        android:padding="10dp"/>
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/chairoffice"
                        android:id="@+id/chairOffice"
                        android:padding="10dp"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/lamp"
                        android:id="@+id/lamp"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bookshelf"
                        android:id="@+id/bookshelf"/>
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/monitor"
                        android:id="@+id/monitor"
                        android:padding="10dp"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/odltv"
                        android:id="@+id/odltv"/>
                    <ImageView
                        android:id="@+id/bear"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bear" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/cat"
                        android:id="@+id/cat"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/cow"
                        android:id="@+id/cow"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/dog"
                        android:id="@+id/dog"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/elephant"
                        android:id="@+id/elephant"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ferret"
                        android:id="@+id/ferret"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/hippopotamus"
                        android:id="@+id/hippopotamus"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/horse"
                        android:id="@+id/horse"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/reindeer"
                        android:id="@+id/reindeer"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/koala_bear"
                        android:id="@+id/koala_bear"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/lion"
                        android:id="@+id/lion"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/wolverine"
                        android:id="@+id/wolverine"/>
                </LinearLayout>
            </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/linearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/startHorizontal"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnClear"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                android:src="@drawable/ic_plane_node_remove"
                android:visibility="gone"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAdd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_plane_node_add"
                android:clickable="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:visibility="gone"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnDone"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_plane_node_remove"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnRuler"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_above="@+id/startHorizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon_ruler2" />
    </RelativeLayout>

</layout>